<?xml version="1.0" encoding="UTF-8"?>
<templateSet group="Luau">
    <template resource-bundle="messages.LuauBundle" key="livetemplate.description.lfunc"
              name="lfunc" toReformat="true" toShortenFQNames="true"
              value="local function $FN$($PARAMS$)&#10;$END$&#10;end">
        <variable name="FN" defaultValue="&quot;funcName&quot;" alwaysStopAt="true"/>
        <variable name="PARAMS" alwaysStopAt="true"/>
        <context>
            <option name="LUAU" value="true"/>
        </context>
    </template>

    <template resource-bundle="messages.LuauBundle" key="livetemplate.description.func"
              name="func" toReformat="true" toShortenFQNames="true"
              value="function $FN$($PARAMS$)&#10;$END$&#10;end">
        <variable name="FN" defaultValue="&quot;funcName&quot;" alwaysStopAt="true"/>
        <variable name="PARAMS" alwaysStopAt="true"/>
        <context>
            <option name="LUAU" value="true"/>
        </context>
    </template>

    <template resource-bundle="messages.LuauBundle" key="livetemplate.description.for-c"
              name="forc" toReformat="true" toShortenFQNames="true"
              value="for $VAR$ = 1, $EXPR$ do&#10;$END$&#10;end">
        <variable name="VAR" defaultValue="&quot;i&quot;" alwaysStopAt="true"/>
        <variable name="EXPR" expression="complete()" defaultValue="&quot;10&quot;" alwaysStopAt="true"/>
        <context>
            <option name="LUAU" value="true"/>
        </context>
    </template>

    <template resource-bundle="messages.LuauBundle" key="livetemplate.description.for"
              name="for" toReformat="true" toShortenFQNames="true"
              value="for $VAR1$, $VAR2$ in $EXPR$ do&#10;$END$&#10;end">
        <variable name="VAR1" defaultValue="&quot;i&quot;" alwaysStopAt="true"/>
        <variable name="VAR2" defaultValue="&quot;v&quot;" alwaysStopAt="true"/>
        <variable name="EXPR" expression="complete()" alwaysStopAt="true"/>
        <context>
            <option name="LUAU" value="true"/>
        </context>
    </template>

    <template resource-bundle="messages.LuauBundle" key="livetemplate.description.for-i"
              name="fori" toReformat="true" toShortenFQNames="true"
              value="for $VAR1$, $VAR2$ in ipairs($EXPR$) do&#10;$END$&#10;end">
        <variable name="VAR1" defaultValue="&quot;i&quot;" alwaysStopAt="true"/>
        <variable name="VAR2" defaultValue="&quot;v&quot;" alwaysStopAt="true"/>
        <variable name="EXPR" expression="complete()" alwaysStopAt="true"/>
        <context>
            <option name="LUAU" value="true"/>
        </context>
    </template>

    <template resource-bundle="messages.LuauBundle" key="livetemplate.description.for-p"
              name="forp" toReformat="true" toShortenFQNames="true"
              value="for $VAR1$, $VAR2$ in pairs($EXPR$) do&#10;$END$&#10;end">
        <variable name="VAR1" defaultValue="&quot;i&quot;" alwaysStopAt="true"/>
        <variable name="VAR2" defaultValue="&quot;v&quot;" alwaysStopAt="true"/>
        <variable name="EXPR" expression="complete()" alwaysStopAt="true"/>
        <context>
            <option name="LUAU" value="true"/>
        </context>
    </template>

    <template resource-bundle="messages.LuauBundle" key="livetemplate.description.if-end"
              name="if" toReformat="true" toShortenFQNames="true"
              value="if $VAR$ then&#10;$END$&#10;end">
        <variable name="VAR" expression="complete()" defaultValue="&quot;true&quot;" alwaysStopAt="true"/>
        <context>
            <option name="LUAU" value="true"/>
        </context>
    </template>

    <template resource-bundle="messages.LuauBundle" key="livetemplate.description.else-if"
              name="elseif" toReformat="true" toShortenFQNames="true"
              value="elseif $VAR$ then&#10;$END$">
        <variable name="VAR" expression="complete()" defaultValue="&quot;true&quot;" alwaysStopAt="true"/>
        <context>
            <option name="LUA_IF" value="true"/>
        </context>
    </template>

    <template resource-bundle="messages.LuauBundle" key="livetemplate.description.if-else"
              name="ifelse" toReformat="true" toShortenFQNames="true"
              value="if $VAR$ then&#10;$END$&#10;else&#10;end">
        <variable name="VAR" expression="complete()" defaultValue="&quot;true&quot;" alwaysStopAt="true"/>
        <context>
            <option name="LUAU" value="true"/>
        </context>
    </template>

    <template resource-bundle="messages.LuauBundle" key="livetemplate.description.closure"
              name="closure" toReformat="false" toShortenFQNames="true"
              value="function($PARAMS$) $END$ end">
        <variable name="PARAMS" alwaysStopAt="true"/>
        <context>
            <option name="LUAU" value="true"/>
        </context>
    </template>
</templateSet>
